{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist/",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["jam-core/**/*", "lib/**/*"]
}
